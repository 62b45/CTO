# Environment variables
# Copy this file to .env and fill in your values
# For Docker deployment, see DOCKER.md

# Application
NODE_ENV=development
PORT=3001

# Database - SQLite with Prisma ORM
# For local development: file:./apps/backend/data/dev.db
# For Docker: file:/app/data/dev.db
DATABASE_URL=file:./apps/backend/data/dev.db

# Legacy JSON-based storage paths
COOLDOWN_DB_PATH=./apps/backend/data/cooldowns.json
PROGRESSION_DB_PATH=./apps/backend/data/progression.json
PROFESSIONS_DB_PATH=./apps/backend/data/professions.json
INVENTORY_DB_PATH=./apps/backend/data/inventory.json
DUNGEON_DB_PATH=./apps/backend/data/dungeons.json
ARENA_DB_PATH=./apps/backend/data/arena.json

# API Keys
API_KEY=dev-key
ADMIN_API_KEY=dev-admin-key

# Logging
LOG_LEVEL=info

# Frontend API configuration
# Local development: http://localhost:3001
# Docker/production: http://localhost:3001 (proxied through nginx at port 80)
VITE_API_URL=http://localhost:3001